<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:gravity="center" android:layout_marginTop="10dp" android:background="@color/white" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
